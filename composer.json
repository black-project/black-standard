{
    "name": "black-project/black-standard-edition",
    "license": "MIT",
    "type": "project",
    "description": "The \"Black Edition\" distribution build on top of \"Symfony Standard Edition\"",
    "autoload": {
        "psr-4": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "require": {
        "php": ">=5.5.9",
        "symfony/symfony": "^2.8",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^2.8",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.0",
        "roave/security-advisories": "dev-master",
        "cocur/slugify": "^1.2",
        "ramsey/uuid": "^2.8",
        "puli/symfony-bundle": "^1.0",
        "symfony/psr-http-message-bridge": "^0.2.0",
        "zendframework/zend-diactoros": "^1.3"
    },
    "require-dev": {
        "hautelook/alice-bundle": "dev-master",
        "behat/behat": "~3.0",
        "knplabs/friendly-contexts": "~0.5",
        "behat/symfony2-extension": "~2.0",
        "behat/mink-browserkit-driver": "~1.3",
        "behat/mink-selenium2-driver": "~1.2",
        "phpspec/phpspec": "^2.4",
        "memio/spec-gen": "^0.4",
        "symfony/phpunit-bridge": "^2.7",
        "phpunit/phpunit": "~5.0",
        "rmiller/behat-spec": "^0.2.0",
        "braincrafted/testing-bundle": "^0.4.1",
        "mikey179/vfsStream": "^1.6",
        "puli/cli": "^1.0"
    },
    "suggest": {
        "twig/extensions": "If you want useful extensions for Twig",
        "henrikbjorn/phpspec-code-coverage": "Code coverage for phpspec",
        "stof/doctrine-extensions-bundle": "Useful Doctrine extensions for lazy guys ^^",
        "stfalcon/tinymce-bundle": "Rich editor",
        "helios-ag/fm-elfinder-bundle": "Rich file manager"
    },
    "minimum-stability": "beta",
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.8-dev"
        }
    },
    "support": {
        "issues": "https://github.com/black-project/black-standard/issues"
    }
}
